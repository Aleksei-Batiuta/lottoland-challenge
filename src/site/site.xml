<project>
    <skin>
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>1.7</version>
    </skin>
    <body>
<!--        <menu ref="parent" />-->
        <menu ref="modules" />
        <menu ref="reports" />
    </body>
    <custom>
        <fluidoSkin>
            <topBarEnabled>true</topBarEnabled>
            <gitHub>
                <projectId>Aleksei-Batiuta/lottoland</projectId>
                <ribbonOrientation>right</ribbonOrientation>
                <ribbonColor>black</ribbonColor>
            </gitHub>
            <topBarIcon>
                <name>${project.name}</name>
                <alt>${project.description}</alt>
                <src>/images/logos/lottoland.png</src>
                <href>/index.html</href>
            </topBarIcon>
        </fluidoSkin>
    </custom>
</project>
